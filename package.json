{
  "name": "express-pg-orm-backend-ts",
  "version": "1.0.0",
  "description": "TypeScript Express.js backend with PostgreSQL and Sequelize ORM",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/app.ts",
    "build:tsoa": "tsoa spec-and-routes",
    "prestart": "npm run build:tsoa && npm run build",
    "start": "node dist/src/app.js",
    "predev": "npm run build:tsoa",
    "prebuild": "npm run build:tsoa",
    "build": "tsc",
    "build:dev": "npm run build && npm start",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist build",
    "db:init": "ts-node src/scripts/initDB.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.35.2",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "typeorm": "^0.3.27",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.19.17",
    "@types/pg": "^8.10.9",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.2"
  }
}
